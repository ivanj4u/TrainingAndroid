<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentHargaEmas">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Harga Jual Beli Emas"
            android:id="@+id/textView2"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PT. Pegadaian (Persero)"
            android:id="@+id/textView3"
            android:gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:columnCount="3"
            android:rowCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:id="@+id/txtTanggal"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    :   "
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="16dp" />

            <EditText
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtDate"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="12dp"
                android:hint="dd-MM-yyyy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Jual"
                android:id="@+id/txtHargaJual"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    :   "
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="16dp" />

            <EditText
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:id="@+id/tfHargaJual"
                android:layout_row="1"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Beli"
                android:id="@+id/txtHargaBeli"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    :   "
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="16dp" />

            <EditText
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:id="@+id/tfHargaBeli"
                android:layout_row="2"
                android:layout_column="2" />


        </GridLayout>
    </LinearLayout>


</FrameLayout>
